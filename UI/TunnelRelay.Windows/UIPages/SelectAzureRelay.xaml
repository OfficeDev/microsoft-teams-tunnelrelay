<Window x:Class="TunnelRelay.Windows.SelectAzureRelay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TunnelRelay.Windows"
        mc:Ignorable="d"
        Title="" Height="400" Width="700" WindowStartupLocation="Manual">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Configure" Grid.Column="1" FontSize="25" FontWeight="SemiBold"/>
        <TextBlock Text="Select the Azure Relay" Grid.Column="1" Grid.Row="1" FontSize="20" FontWeight="DemiBold"/>
        <Label Content="Select the Azure subscription" Grid.Column="1" Grid.Row="2" VerticalAlignment="Bottom" />
        <ComboBox Name="comboSubscriptionList" Grid.Column="1" Grid.Row="3" DisplayMemberPath="DisplayName" SelectedValuePath="Id" SelectionChanged="SubscriptionList_SelectionChanged" />
        <Label Content="Select the Azure Relay" Grid.Column="1" Grid.Row="4" VerticalAlignment="Bottom" />
        <ComboBox Name="comboAzureRelayList" Grid.Column="1" Grid.Row="5" DisplayMemberPath="Name" SelectedValuePath="Id" SelectionChanged="AzureRelayList_SelectionChanged" />
        <Label Name="lblAzureRelayName" Content="Enter the name for Azure Relay" Grid.Column="1" Grid.Row="6" VerticalAlignment="Bottom" Visibility="Collapsed"/>
        <TextBox Name="txtAzureRelayName" Grid.Column="1" Grid.Row="7" Height="30" Visibility="{Binding ElementName=lblAzureRelayName, Path=Visibility }" TextChanged="AzureRelayName_TextChanged"/>
        <Label Content="Select location for new Azure Relay" Grid.Column="1" Grid.Row="8" VerticalAlignment="Bottom" Visibility="{Binding ElementName=lblAzureRelayName, Path=Visibility }" HorizontalAlignment="Left" Width="200"/>
        <ComboBox Name="listBoxSubscriptionLocations" Grid.Column="1" Grid.Row="8" HorizontalAlignment="Right" Visibility="{Binding ElementName=lblAzureRelayName, Path=Visibility }" IsEditable="False" Margin="0,2,0,0"/>
        <CheckBox Name="chkEnableEncryption" Grid.Column="1" Grid.Row="10" IsChecked="True" Content="Encrypt Azure Relay key" VerticalAlignment="Center" HorizontalAlignment="Right" Unchecked="ChkEnableEncryption_Unchecked"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="11" Name="stcPerformOperation">
            <ProgressBar Name="progressBar" IsIndeterminate="True" Width="250" Margin="0,0,20,0" Visibility="Hidden"/>
            <Button Content="Cancel" Width="80" Margin="0,0,20,0" Click="Cancel_Click" />
            <Button Name="btnDone" Content="Done" Width="80" IsEnabled="False" Click="Done_Click" />
        </StackPanel>
    </Grid>
</Window>
